  "screenshots": [
    {
      "src": "screenshot-home.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Pantalla principal con álbumes"
    },
    {
      "src": "screenshot-player.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow", 
      "label": "Reproductor completo con controles"
    },
    {
      "src": "screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vista de escritorio con múltiples temas"
    }
  ],
  "share_target": {
    "action": "/share-music",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+music",
      "url": "/?track=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-audio",
      "accept": {
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a", ".flac"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.klmz.music",
      "id": "com.klmz.music"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}
